{
  "manifest_version": 3,
  "name": "ChatGPT Code Capture",
  "version": "1.0",
  "description": "Capture ChatGPT-generated code snippets and save them to your local PC.",
  "permissions": [
    "storage",
    "nativeMessaging",
    "scripting"
  ],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
